@model InfnetMVC.Models.Funcionario

@{
    ViewData["Title"] = "Delete";
}

<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            color: #333;
            margin: 0;
            padding: 0;
        }
        .containers {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        h1 {
            font-size: 24px;
            margin-bottom: 20px;
        }
        .variable {
            margin-bottom: 10px;
        }
        .variable span {
            font-weight: bold;
        }
    </style>
</head>

<h1>Delete</h1>

<h3>Tem certeza que deseja deletar?</h3>
<div>
    <h4>Funcionario</h4>
    <hr />
    <div class="containers">
        <div class = "variable">
            @Html.DisplayNameFor(model => model.Nome)
            @Html.DisplayFor(model => model.Nome)
        </div>
        <div class = "variable">
            Endsereço
            @Html.DisplayFor(model => model.Endereco)
        </div>
        <div class = "variable">
            @Html.DisplayNameFor(model => model.Telefone)
            @Html.DisplayFor(model => model.Telefone)
        </div>
        <div class = "variable">
            @Html.DisplayNameFor(model => model.Email)
            @Html.DisplayFor(model => model.Email)
        </div>
        <div class = "variable">
            @Html.DisplayNameFor(model => model.DataNascimento)
            @Html.DisplayFor(model => model.DataNascimento)
        </div>
        <div class = "variable">
            @Html.DisplayNameFor(model => model.Departamento)
            @Html.DisplayFor(model => model.Departamento)
        </div>
    </div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="FuncionarioId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">De volta à lista</a>
    </form>
</div>
